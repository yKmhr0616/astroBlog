---
export interface Props extends astroHTML.JSX.SVGAttributes {}

const optionArgs = Astro.props
const defaultProps = {
  xmlns: 'http://www.w3.org/2000/svg',
  fill: 'none',
  viewBox: '0 0 24 24',
  stroke: 'currentColor',
  'stroke-width': '1.5',
}

const options = Object.assign(defaultProps, { ...optionArgs })
---

<svg {...options}>
  <slot />
</svg>
