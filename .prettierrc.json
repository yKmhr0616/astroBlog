{
    "semi": false,
    "overrides": [
        {
            "files":"*",
            "options": {
                "printWidth": 120,
                "tabWidth": 4,
                "bracketSpacing": true,
                "arrowParens": "always",
                "htmlWhitespaceSensitivity": "ignore",
                "singleQuote": true,
                "trailingComma": "es5",
                "singleAttributePerLine": true
            }
        },
        {
            "files":["*.{astro,php,html,vue,json}"],
            "options": {
                "tabWidth": 2,
                "singleAttributePerLine": false
            }

        }

    ]
}
